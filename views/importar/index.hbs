{{> header}}
<link href="/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">

<div class="container" style="margin-top:15px;">
  <h3>Cargar Archivo Excel</h3>
  <hr>
  <div class="card card-login mx-auto mt-5">
      <div class="card-header">Importar archivo</div>
      <div class="card-body">
        <div class="text-center mt-4 mb-5">
          <h4>Ruta del archivo</h4>
        </div>
        <form action="/importar" autocomplete="off" method="POST">
          <div class="form-group">
            <input class="form-control" name="url" type="text" placeholder="url archivo">
          </div>
          <button class="btn btn-lg btn-primary btn-block" type="submit">Cargar Archivo</button>
        </form>
      </div>
    </div>
  <hr>
</div>
<!-- /.container -->
<script src="/vendor/jquery/jquery.min.js"></script>
<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
