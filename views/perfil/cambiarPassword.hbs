{{> header}}
<link href="/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">

<div class="container" style="margin-top:50px;">
    <div class="card card-register">
      <div class="card-header">Cambiar Contraseña</div>
      <div class="card-body">
        <form action="/cambiarPassword" autocomplete="off" method="POST">
          <div class="form-group">
            {{{error}}}
            {{#if errores}}
              {{#each errores}}
                <div class='alert alert-danger' role='alert'>{{this}}</div>
              {{/each}}
            {{/if}}
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <label>Contraseña anterior</label>
                <input class="form-control" type="password" aria-describedby="emailHelp" name="password" placeholder="Contraseña anterior">
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-6">
                <label>Contraseña nueva</label>
                <input class="form-control" type="password" name="nuevapassword" placeholder="Contraseña">
              </div>
              <div class="col-md-6">
                <label>Confirmar Contraseña</label>
                <input class="form-control" type="password" name="nuevapassword_confirmation" placeholder="Confirmar Contraseña">
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="col-md-12">
              <button class="btn btn-lg btn-primary btn-block botonReg" type="submit">Cambiar Contraseña</button>
            </div>
          </div>
        </form>
        <div class="text-center">
          <a class="d-block small mt-3" href="/index">Volver</a>
        </div>
      </div>
    </div>
  </div>
  <!-- /.container -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
