<div class="container">
  <div class="card card-login mx-auto mt-5">
    <div class="card-header"> <img src="/images/logos/Color.png" class="img-responsive" alt="Minuto"></div>
    <div class="card-body">
      <form action="/login" autocomplete="off" method="POST">

        <div class="form-group">
          <label for="exampleInputEmail1">Email</label>
          <input class="form-control" name="email" type="email" aria-describedby="emailHelp" placeholder="Email: admin@admin.com">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Contraseña</label>
          <input class="form-control" name="password" type="password" placeholder="Contraseña: admin++">
        </div>
        <button class="btn btn-primary btn-block" type="submit">Ingresar</button>
        <hr>
        {{{error}}}
      </form>
      <div class="text-center">
        <a class="d-block small" href="/recuperar">Olvidaste la Contraseña ?</a>
      </div>
    </div>
  </div>
</div>
